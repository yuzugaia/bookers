<h1 class='head-body'>Books</h1>

<table>
  <div>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th clospan="3"></th>
    </tr>
  </div>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%=  book.body %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, "data-confirm" => "Are ypu sure?"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="error-msg">
    <h3>
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>