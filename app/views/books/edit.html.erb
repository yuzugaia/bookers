<h1 class='edit-b'>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-msg">
    <h3>
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>

<div class="link">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <a href="/books">Back</a>
</div>

<% end %>
